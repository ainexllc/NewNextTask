rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile images
    match /users/{userId}/profile/{imageId} {
      allow read: if true; // Public read
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // 5MB limit
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Family shared images (recipes, bills, etc.)
    match /families/{familyId}/{collection}/{docId}/{imageId} {
      allow read: if request.auth != null; // Authenticated users can read
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024 // 10MB limit
                   && (request.resource.contentType.matches('image/.*') ||
                       request.resource.contentType.matches('application/pdf'));
    }
    
    // Recipe images
    match /recipes/{recipeId}/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024 // 5MB limit
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Bill attachments
    match /bills/{billId}/{attachmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024 // 10MB limit
                   && (request.resource.contentType.matches('image/.*') ||
                       request.resource.contentType.matches('application/pdf'));
    }
    
    // Note attachments  
    match /notes/{noteId}/{attachmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    // Temporary uploads (24 hour expiry)
    match /temp/{userId}/{uploadId} {
      allow read, write: if request.auth != null && request.auth.uid == userId
                         && request.resource.size < 20 * 1024 * 1024; // 20MB limit
    }
  }
}